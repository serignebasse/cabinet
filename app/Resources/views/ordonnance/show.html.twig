{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ordonnance</h1>

    <table>
        <tbody>
            <tr>
                <th>Idordonn</th>
                <td>{{ ordonnance.idordonn }}</td>
            </tr>
            <tr>
                <th>Dateordonn</th>
                <td>{% if ordonnance.dateordonn %}{{ ordonnance.dateordonn|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Medicament</th>
                <td>{{ ordonnance.medicament }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ordonnance_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ordonnance_edit', { 'id': ordonnance.idordonn }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
